# Mandrel Production Environment Configuration
NODE_ENV=production

# Database Configuration
# DATABASE_URL, DATABASE_PASSWORD: Set in environment or secrets management
DATABASE_USER=ridgetop
DATABASE_HOST=localhost
DATABASE_NAME=aidis_production
DATABASE_PORT=5432
DATABASE_PASSWORD=mandrel2024

# Authentication
# JWT_SECRET: REQUIRED - Set in environment or secrets management
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Service Ports (0 = dynamic assignment)
MANDREL_HTTP_PORT=0
MANDREL_MCP_BRIDGE_PORT=0
MANDREL_COMMAND_PROD_PORT=0
MANDREL_MCP_PORT=8080

# CORS (production - restrict to actual domains)
# CORS_ORIGIN=https://mandrel.yourdomain.com

# Logging (production)
LOG_LEVEL=warn
DB_LOG_LEVEL=error
ENABLE_LOG_ROTATION=true
LOG_MAX_FILE_SIZE=100m
LOG_MAX_FILES=60d

# MCP Configuration
MCP_DEBUG=errors

# Feature Flags (production - conservative)
FEATURE_FLAG_PHASE1_FEATURE_FLAGS=false
FEATURE_FLAG_PHASE1_CONTRACT_TESTS=false
FEATURE_FLAG_PHASE1_REACT_ERROR_BOUNDARIES=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_REQUESTS=50
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/var/mandrel/uploads
REDIS_URL=redis://localhost:6379
